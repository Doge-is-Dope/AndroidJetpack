<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">?colorPrimary</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <!--<item name="android:statusBarColor">@color/status_bar</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.LightNav" parent="AppTheme.NoActionBar" />


    <style name="Widget.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/white_90</item>
    </style>

    <style name="Widget.Demo" parent="@android:style/Widget" />

    <style name="Widget.Demo.Tag">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.Demo.Tag</item>
    </style>

    <style name="Widget.Demo.AppBar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:fontFamily">@font/work_sans</item>
    </style>

    <style name="Widget.Demo.Tag.Inline">
        <item name="android:drawablePadding">@dimen/spacing_micro</item>
        <item name="android:drawableStart">@drawable/tag_dot</item>
    </style>

    <style name="Widget.Demo.TextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Demo.Body</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
    </style>

    <style name="TextAppearance.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="TextAppearance.MovieTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TextAppearance.Demo.Tag" parent="@style/TextAppearance.Demo.ListSecondary" />

    <style name="TextAppearance.Demo.Body" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Demo.ListSecondary" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>
